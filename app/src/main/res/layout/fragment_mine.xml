<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="caixin.android.com.viewmodel.MineViewModel" />

        <variable
            name="viewModel"
            type="caixin.android.com.viewmodel.MineViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-48dp"
            android:background="@color/bg_main_white">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/mine_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="80dp"
                    android:layout_marginEnd="10dp"
                    app:cardCornerRadius="5dp">

                    <RelativeLayout
                        android:id="@+id/rl_mine_info"
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_avatar"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp" />

                        <TextView
                            android:id="@+id/user_nickname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="30dp"
                            android:layout_toRightOf="@+id/iv_avatar"
                            android:textColor="@color/black"
                            android:textSize="22sp" />

                        <TextView
                            android:id="@+id/tv_use_account"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/user_nickname"
                            android:layout_alignLeft="@+id/user_nickname"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/gray"
                            android:textSize="14sp" />

                        <ImageView
                            android:id="@+id/iv_qr_code"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:layout_toLeftOf="@+id/iv_jiantou"
                            android:background="@mipmap/ic_qr_code" />

                        <ImageView
                            android:id="@+id/iv_jiantou"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="20dp"
                            android:src="@mipmap/jiantou_right"
                            tools:ignore="ContentDescription" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <RelativeLayout
                    android:id="@+id/rl_my_money"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/shape_white_with_radius_bg"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="20dp"
                        android:layout_marginBottom="0dp"
                        android:drawableStart="@mipmap/ic_wallet"
                        android:drawablePadding="17dp"
                        android:gravity="center"
                        android:text="我的钱包"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        tools:ignore="ContentDescription,HardcodedText,RelativeOverlap" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="20dp"
                        android:src="@mipmap/jiantou_right"
                        tools:ignore="ContentDescription" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/shape_white_with_radius_bg"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/rl_collect"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="20dp"
                            android:layout_marginBottom="0dp"
                            android:drawableStart="@mipmap/ic_collect"
                            android:drawablePadding="13dp"
                            android:gravity="center"
                            android:text="@string/collect"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            tools:ignore="ContentDescription,HardcodedText,RelativeOverlap" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="20dp"
                            android:src="@mipmap/jiantou_right"
                            tools:ignore="ContentDescription" />

                        <!--    <Switch
                                android:id="@+id/voice_switch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="10dp"
                                android:thumb="@drawable/switch_custom_thumb_selector"
                                android:track="@drawable/switch_custom_track_selector" />-->

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@color/white_gray" />

                    <RelativeLayout
                        android:id="@+id/rl_daily_sign"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="20dp"
                            android:layout_marginBottom="0dp"
                            android:drawableStart="@mipmap/ic_daily_sign"
                            android:drawablePadding="17dp"
                            android:gravity="center"
                            android:text="签到"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            tools:ignore="ContentDescription,HardcodedText,RelativeOverlap" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="20dp"
                            android:src="@mipmap/jiantou_right"
                            tools:ignore="ContentDescription" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/shape_white_with_radius_bg"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/rl_security_setting"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="20dp"
                            android:layout_marginBottom="0dp"
                            android:drawableStart="@mipmap/ic_security_setting"
                            android:drawablePadding="20dp"
                            android:gravity="center"
                            android:text="@string/security_setting"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            tools:ignore="ContentDescription,HardcodedText,RelativeOverlap" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="20dp"
                            android:src="@mipmap/jiantou_right"
                            tools:ignore="ContentDescription" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@color/white_gray" />

                    <RelativeLayout
                        android:id="@+id/rl_normal_setting"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_change_pay_password"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="20dp"
                            android:layout_marginBottom="0dp"
                            android:drawableStart="@mipmap/ic_setting"
                            android:drawablePadding="17dp"
                            android:gravity="center"
                            android:text="@string/normal_setting"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            tools:ignore="ContentDescription,HardcodedText,RelativeOverlap" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="20dp"
                            android:src="@mipmap/jiantou_right"
                            tools:ignore="ContentDescription" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@color/white_gray" />

                    <RelativeLayout
                        android:id="@+id/rl_group_send"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="20dp"
                            android:layout_marginBottom="0dp"
                            android:drawableStart="@mipmap/ic_group_send"
                            android:drawablePadding="17dp"
                            android:gravity="center"
                            android:text="@string/multiple_send_assistant"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            tools:ignore="ContentDescription,HardcodedText,RelativeOverlap" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="20dp"
                            android:src="@mipmap/jiantou_right"
                            tools:ignore="ContentDescription" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@color/white_gray" />

                    <RelativeLayout
                        android:id="@+id/rl_online_report"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="20dp"
                            android:layout_marginBottom="0dp"
                            android:drawableStart="@mipmap/ic_online_report"
                            android:drawablePadding="17dp"
                            android:gravity="center"
                            android:text="@string/online_report"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            tools:ignore="ContentDescription,HardcodedText,RelativeOverlap" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="20dp"
                            android:src="@mipmap/jiantou_right"
                            tools:ignore="ContentDescription" />
                    </RelativeLayout>
                </LinearLayout>


                <RelativeLayout
                    android:id="@+id/rl_current_version_info"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/shape_white_with_radius_bg"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_version_info"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="20dp"
                        android:layout_marginBottom="0dp"
                        android:drawableStart="@mipmap/ic_version_infor"
                        android:drawablePadding="17dp"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        tools:ignore="ContentDescription,HardcodedText,RelativeOverlap" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="20dp"
                        android:src="@mipmap/jiantou_right"
                        tools:ignore="ContentDescription" />
                </RelativeLayout>


                <Button
                    android:id="@+id/btn_logout"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/selector_btn_red_bg"
                    android:enabled="true"
                    android:text="@string/exit_login"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</layout>